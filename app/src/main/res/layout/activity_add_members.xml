<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanUpcoming.addMembers.AddMembers">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/members_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/trip_budget"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/create_group"
        android:layout_marginStart="31dp"
        android:background="@drawable/border"
        android:hint="Enter Budget" />

    <EditText
        android:id="@+id/tripName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/trip_budget"
        android:layout_alignTop="@+id/trip_date"

        android:background="@drawable/border"
        android:hint="Enter Trip Name" />

    <TextView
        android:id="@+id/trip_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/create_group"
        android:textAlignment="center"
        android:layout_marginBottom="97dp"
        android:background="@drawable/border"
        android:hint="Trip Date"
        android:paddingTop="15dp"
        />

    <Button
        android:id="@+id/create_group"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_button"
        android:text="Create Group"
        android:textColor="@color/white" />
</RelativeLayout>